{
    "compilerOptions": {
        "target": "es2017",
        "allowSyntheticDefaultImports": false,
        "baseUrl": "./",
        "paths": {
            "@utils": [
                "utils/"
            ],
            "@services": [
                "services/"
            ],
            "@core/app": [
                "core/app"
            ],
            "@core/http": [
                "core/http/index"
            ],
            "@core/utils": [
                "core/utils/index"
            ],
            "@core/logger": [
                "core/logger/index"
            ],
            "@core/router": [
                "core/routes/router"
            ],
            "@core/loggerCmder": [
                "core/logger/env/cmder"
            ],
            "@core/notificator": [
                "core/notification/notificator"
            ],
            "@core/notification": [
                "core/notification/notification"
            ],
            "@vBaseComponent": [
                "components/v-base-component/src/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ],
    "include": [
        "core",
        "apps/**/*"
    ]
}